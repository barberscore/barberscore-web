<section>
  <div class='card'>
    <div class='card-header'>
      <h5>
        {{model.kind}}
      </h5>
    </div>
    <div class='card-body'>
      {{#bs-nav type='tabs' as |nav|}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.details"}}Details{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.panelists"}}Panelists{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.appearances"}}Appearances{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.outcomes"}}Outcomes{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.standings"}}Standings{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.draw"}}Draw{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds.round.reports"}}Reports{{/nav.link-to}}
        {{/nav.item}}
      {{/bs-nav}}
      {{outlet}}
    </div>
    <div class='card-footer'>
      <div class='pull-right'>
        <h5>
          Round Status: <strong>{{model.status}}</strong>
        </h5>
      </div>
      <ul class='list-inline'>
        {{#if (eq model.status 'New')}}
          <li class='list-inline-item'>{{round-build model=model}}</li>
          <li class='list-inline-item'>{{round-reset model=model}}</li>
        {{else if (eq model.status 'Built')}}
          <li class='list-inline-item'>{{round-start model=model}}</li>
          <li class='list-inline-item'>{{round-reset model=model}}</li>
        {{else if (eq model.status 'Started')}}
          <li class='list-inline-item'>{{round-complete model=model}}</li>
          <li class='list-inline-item'>{{round-reset model=model}}</li>
          <li class='list-inline-item'>{{round-mock model=model}}</li>
        {{else if (eq model.status 'Completed')}}
          <li class='list-inline-item'>{{round-finalize model=model}}</li>
          <li class='list-inline-item'>{{round-reset model=model}}</li>
        {{else if (eq model.status 'Verified')}}
          <li class='list-inline-item'>{{round-publish model=model}}</li>
          <li class='list-inline-item'>{{round-reset model=model}}</li>
        {{else if (eq model.status 'Published')}}
          <li class='list-inline-item'>{{round-reset model=model}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</section>