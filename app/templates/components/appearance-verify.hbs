<BsButton
  @type='primary'
  disabled={{this.disableButton}}
  @onClick={{perform this.verifyAppearance}}
>
  {{#if this.verifyAppearance.isRunning}}
    Checking... <FaIcon @icon="spinner" @spin={{true}} />
  {{else}}
    {{#if (eq this.model.status 'Finished')}}
      Check Appearance
    {{else if (eq this.model.status 'Variance')}}
      Verify Appearance
    {{/if}}
  {{/if}}
</BsButton>