{{#bs-button
  type='primary'
  disabled=this.model.isDisabled
  onClick=(perform verifyAppearance)
}}
  {{#if this.verifyAppearance.isRunning}}
    Checking... {{fa-icon "spinner" spin=true}}
  {{else}}
    {{#if (eq this.model.status 'Finished')}}
      Check Appearance
    {{else if (eq this.model.status 'Variance')}}
      Verify Appearance
    {{/if}}
  {{/if}}
{{/bs-button}}