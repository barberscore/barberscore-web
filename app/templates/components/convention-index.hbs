<div class='card'>
  <div class='card-header'>
    <h3>
      Conventions
    </h3>
  </div>
  <div class='card-body'>
    <section>
      <div class='table-responsive'>
        <table class='table table-hover table-sm'>
          {{!-- <caption>These are the active conventions.</caption> --}}
          <thead class='thead-light'>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Venue</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.sortedConventions as |convention|}}
              <tr>
                <td>
                  <CloudinaryImage @publicId={{convention.imageId}} @options={{hash width='64'}} class='img-fluid img-rounded' />
                </td>
                <td>
                  <LinkTo @route='dashboard.conventions.convention.details' @model={{convention}}>{{convention.nomen}}</LinkTo>
                </td>
                <td>
                  {{convention.venueName}}<br>
                  {{convention.location}}
                </td>
                <td>
                  {{moment-format convention.startDate 'L'}} - {{moment-format convention.endDate 'L'}}
                </td>
              </tr>
            {{else}}
              <tr>
                <td></td>
                <td>(You do not have any current assignments.  Please check with David Mills or Chris Buechler if you believe this is in error.)</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </section>
    {{!-- <section>
      {{search-conventions}}
    </section> --}}
  </div>
</div>