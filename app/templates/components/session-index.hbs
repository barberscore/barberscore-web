<div class='table-responsive'>
  <table class='table table-hover table-sm'>
    <caption>Current Sessions</caption>
    <thead class='thead-light'>
      <tr>
        <th>Name</th>
        <th>Organization</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedSessions as |session|}}
        <tr>
          <td><LinkTo @route='dashboard.conventions.convention.sessions.session.details' @model={{session}}>{{session.kind}}</LinkTo></td>
          {{#if session.groupName.isLoading}}
            <td colspan=2>Loading&nbsp;<FaIcon @icon='spinner' @spin={{true}} /></td>
          {{else}}
            <td>{{session.groupName}}</td>
          {{/if}}
          <td>{{session.status}}</td>
        </tr>
      {{else}}
        <tr>
          <td>No active Sessions currently assigned to you.</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>