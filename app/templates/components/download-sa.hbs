<BsButton
  @type='success'
  @onClick={{perform this.sa}}
>
  {{#if this.sa.isRunning}}
    Downloading <FaIcon @icon="spinner" @spin={{true}} />
  {{else if this.sa.last.isError}}
    Error Downloading
  {{else}}
    {{#if (eq this.model.status 'Completed')}}
      Download <em>Draft</em> SA&nbsp;&nbsp;<FaIcon @icon='file-text' />
    {{else}}
      Download <strong>Final</strong> SA&nbsp;&nbsp;<FaIcon @icon='file-text' />
    {{/if}}
  {{/if}}
</BsButton>