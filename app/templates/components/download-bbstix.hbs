<BsButton
  @type='success'
  @onClick=(perform bbstix)
>
  {{#if this.bbstix.isRunning}}
    Downloading <FaIcon @icon="spinner" @spin={{true}} />
  {{else if this.bbstix.last.isError}}
    Error Downloading
  {{else}}
    Download BBSTIX&nbsp;&nbsp;<FaIcon @icon='file-text-o' />
  {{/if}}
</BsButton>