<BsButton
  @type='danger'
  @size='sm'
  @onClick={{perform this.variance}}
>
  {{#if this.variance.isRunning}}
    Downloading <FaIcon @icon="spinner" @spin={{true}} />
  {{else if this.variance.last.isError}}
    Error Downloading
  {{else}}
    Download Variance Report&nbsp;&nbsp;<FaIcon @icon='file-pdf' />
  {{/if}}
</BsButton>