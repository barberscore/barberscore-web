<BsButton
  @type='success'
  @onClick={{perform this.titles}}
>
  {{#if this.titles.isRunning}}
    Downloading <FaIcon @icon="spinner" @spin={{true}} />
  {{else if this.titles.last.isError}}
    Error Downloading
  {{else}}
    Download Titles&nbsp;&nbsp;<FaIcon @icon='file-text' />
  {{/if}}
</BsButton>