{{#unless isProduction}}
  {{#bs-button
  type='outline-dark'
  disabled=model.isDisabled
  onClick=(action (mut mockRoundModal) true)
  }}
    Mock Round
  {{/bs-button}}
  {{#bs-modal
    open=mockRoundModal
    onHidden=(pipe-action (action (mut mockRoundModal) false) (action (mut mockRoundModalError) false))
    as |modal|
  }}
    {{#modal.header}}
      <h4>Mock Round</h4>
    {{/modal.header}}
    {{#modal.body}}
      <p>
          Are you sure you would like to mock all scores for this round?
      </p>
      {{#if mockRoundModalError}}
      <p class='text-danger'>
        Could not mock Round.
      </p>
      {{/if}}
    {{/modal.body}}
    {{#modal.footer}}
      {{#bs-button onClick=(action modal.close) type="default"}}Cancel{{/bs-button}}
      {{#bs-button type='primary' disabled=model.isError onClick=(perform mockRound)}}
        {{#if mockRound.isRunning}}
          Mocking... {{fa-icon "spinner" spin=true}}
        {{else}}
          Mock Round
        {{/if}}
      {{/bs-button}}
    {{/modal.footer}}
  {{/bs-modal}}
{{/unless}}