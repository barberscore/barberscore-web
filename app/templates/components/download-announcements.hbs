<BsButton
  @type='success'
  @onClick=(perform announcements)
>
  {{#if announcements.isRunning}}
    Downloading <FaIcon @icon="spinner" />
  {{else if announcements.last.isError}}
    Error Downloading
  {{else}}
    Download Announcements&nbsp;&nbsp;<FaIcon @icon='file-word-o' />
  {{/if}}
</BsButton>