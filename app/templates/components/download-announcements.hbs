<BsButton
  @type='success'
  @onClick={{perform this.announcements}}
>
  {{#if this.announcements.isRunning}}
    Downloading <FaIcon @icon="spinner" @spin={{true}} />
  {{else if this.announcements.last.isError}}
    Error Downloading
  {{else}}
    Download Announcements&nbsp;&nbsp;<FaIcon @icon='file-text' />
  {{/if}}
</BsButton>