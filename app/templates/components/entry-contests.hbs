<div class='table-responsive'>
  <table class='table table-hover table-sm'>
    <thead class='thead-light'>
      <tr>
        <th>Include</th>
        <th>Name</th>
        <th>Description</th>
        <th>Single-Round?</th>
      </tr>
    </thead>
    <tbody>
      {{#multiselect-checkboxes
        tagName=''
        options=options
        selection=model.contests
        onchange=(perform updateSelection)
        as |contest isSelected|
      }}
        <tr>
          <td>
            {{#if lockContests}}
              {{#if isSelected}}
                {{fa-icon 'check-circle' class='text-success'}}
              {{/if}}
            {{else}}
              {{input type="checkbox" class='pl-2' disabled=isDisabled checked=isSelected}}
            {{/if}}
          </td>
          <td>
            {{contest.name}}
          </td>
          <td>
            {{contest.description}}
          </td>
          <td>
            {{boolean-helper contest.isSingle}}
          </td>
        </tr>
      {{/multiselect-checkboxes}}
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>