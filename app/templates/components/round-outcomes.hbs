{{#unless (eq this.model.status 'New')}}
  <div class='table-responsive'>
    <table class='table table-hover table-sm'>
        <caption>
          Outcomes refers to the awards that will be announced out at the conclusion of this particular round. Winners are determined at Round Completion and can be overriden by the PC or ADM if necessary.<br/><strong>NOTE:</strong> Awards that have a checkmark under the "Manual" column must be manually entered by the PC or ADM.
        </caption>
      <thead class='thead-light'>
        <tr>
          <th>Include on<br/>Finals OSS</th>
          <th>Printed</th>
          <th>Contest</th>
          <th>Manual</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
      {{#each this.sortedOutcomes as |outcome|}}
        <tr>

            {{#if (or (and outcome.isSingle (if this.model.isFinals false true)) this.model.isFinals) }}
            <td>
                <Input @type="checkbox" class='pl-2' @checked={{outcome.printOnFinalsOss}} {{on "input" (perform this.autosave outcome)}} disabled={{this.isDisabled}} />
            </td>
            <td>
                <Input @type="checkbox" class='pl-2' @checked={{outcome.printed}} {{on "input" (perform this.autosave outcome)}} disabled={{outcome.disablePrinted}} />
            </td>
            {{else}}
              <td colspan='2'></td>
            {{/if}}
            <td>
              <LinkTo @route='dashboard.conventions.convention.sessions.session.rounds.round.outcomes.outcome' @model={{outcome}}>{{html-safe outcome.name}}</LinkTo>
            </td>
            <td>
              {{#if (or (eq outcome.level 'Manual'))}}
                <FaIcon @icon='check-circle' class='text-success' />
              {{/if}}
            </td>
            <td>
              {{html-safe outcome.winner}}
            </td>
          </tr>
      {{else}}
        <tr>
          <td colspan=3>No award outcomes this round.</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
  {{!-- <div>
    {{#if (eq this.model.status 'Built')}}
      <p>
        <BsButton @type='success' @disabled={{this.model.isDisabled}} @onClick={{action (mut createOutcomeModal) true}}>Create New Outcome</BsButton>
      </p>
    {{/if}}
  </div> --}}
  <div>
    <BsModal
      @open={{this.createOutcomeModal}}
      @onHidden={{pipe-action (action (mut this.createOutcomeModal) false) (action (mut this.createOutcomeModalError) false)}}
      size='lg'
      as |modal|
    >
      <modal.header>
        <h4>New Outcome</h4>
      </modal.header>
      <modal.body>
        <p>
          Enter the details for the Outcome.
        </p>
        <p>
          <Input
            class='form-control'
            type='tel'
            placeholder='Enter Award Number'
            @value={{this.num}}
            min=-10
            max=99
          />
        </p>
        <p>
          <PowerSelect
            @search={{perform this.searchAward}}
            @selected={{this.award}}
            @onChange={{action (mut this.award)}}
            @placeholder="Enter Award Name"
            @allowClear={{true}}
            @renderInPlace={{true}}
            @noMatchesMessage="We Could Not Find an Award with that Name"
            as |award|
          >
            Award: {{html-safe award.name}}
          </PowerSelect>
        </p>
        {{#if this.createOutcomeModalError}}
        <p class='text-danger'>
          Could not create outcome. Be sure the draw numbers are unique! Otherwise, please contact support.
        </p>
        {{/if}}
      </modal.body>
      <modal.footer>
        <BsButton @onClick={{action modal.close}} @type="default">Cancel</BsButton>
        <BsButton @type='success' @onClick={{perform this.saveOutcome this.award this.num}} @disabled={{this.isDisabled}}>
          {{#if this.saveOutcome.isRunning}}
            Creating <FaIcon @icon="spinner" @spin={{true}} />
          {{else}}
            Create Outcome
          {{/if}}
        </BsButton>
      </modal.footer>
    </BsModal>
  </div>
{{else}}
  <h4>
    Outcomes are available after the Round is Built.
  </h4>
{{/unless}}