<BsButton
  @type='success'
  @onClick=(perform drcj)
>
  {{#if this.drcj.isRunning}}
    Downloading <FaIcon @icon="spinner" @spin={{true}} />
  {{else if this.drcj.last.isError}}
    Error Downloading
  {{else}}
    Download DRCJ Report&nbsp;&nbsp;<FaIcon @icon='file-text' />
  {{/if}}
</BsButton>