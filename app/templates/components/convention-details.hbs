<div class='card'>
  <div class='card-header'>
    <div class="row">
      <div class='col'>
        <div class="float-start pb-2">
          <CloudinaryImage @publicId={{this.model.imageId}} @options={{hash height='90' width='90'}} class='img-fluid img-rounded' />
        </div>
        <ul class='list-unstyled float-start ps-4'>
          <li><strong>{{this.model.venueName}}</strong></li>
          <li>{{this.model.location}}</li>
          <li>Timezone: {{this.model.timezone}}</li>
        </ul>
      </div>
      <div class='col-auto'>
        {{#if (eq (env) "production")}}
          <button type="button" class="btn btn-warning btn-sm" {{action "syncFromProd" this.model}}>
            Sync to Staging
          </button>
        {{/if}}
      </div>
    </div>
  </div>
  <div class='table-responsive'>
    <table class='table table-hover table-sm '>
      <caption>
        The Open and Close dates refer to the contest entry period.  The Start and End dates refer to the contest itself.
      </caption>
      <thead class='thead-light'>
        <tr>
          <th>Event</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Open Date</td>
          <td>{{moment-format this.model.openDate 'LL'}}</td>
        </tr>
        <tr>
          <td>Close Date</td>
          <td>{{moment-format this.model.closeDate 'LL'}}</td>
        </tr>
        <tr>
          <td>Start Date</td>
          <td>{{moment-format this.model.startDate 'LL'}}</td>
        </tr>
        <tr>
          <td>End Date</td>
          <td>{{moment-format this.model.endDate 'LL'}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>